@model List<AccountListModel>
@{
    ViewData["Title"] = "GetByUserId";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div class="col-6">
        <h5 class="card-title">User Info</h5>
        <div class="card">
            <div class="card-body">
                <p class="card-text">User Name : @ViewBag.FullName</p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Go to User List</a>
            </div>
        </div>
    </div>
    <div class="col-6">
        <h5>Account info</h5>
        @if (Model.Count != 0)
        {
            foreach (var account in Model)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <h5 class="card-title">Account Number : @account.AccountNumber</h5>
                        <p class="card-text">Balance : @account.Balance</p>
                        <a asp-action="SendMoney" 
                           asp-controller="Account" 
                           asp-route-accountId="@account.Id" class="btn btn-primary">Send Money</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center" role="alert">
                <p class="lead">
                    User does not have an account.
                </p>
            </div>
        }
    </div>
</div>

