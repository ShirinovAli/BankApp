@model List<AppUserModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive mt-4">
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Account Count</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td><getAccountCount app-user-id="@item.Id"></getAccountCount></td>
                    <td>
                        <a asp-action="Create" asp-controller="Account" asp-route-id="@item.Id" class="btn btn-outline-primary">Create new account</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

